	<div class="dashboard-content">

		<!-- Titlebar -->
		<div id="titlebar">
			<div class="row">
				<div class="col-md-12">
					<!-- Breadcrumbs -->
					<nav id="breadcrumbs">
						<ul>
							<li><a href="/dashboard">Dashboard</a></li>
							<li>Manual Topup</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		{{#if flash}}
			<div class="notification {{ flashtype }} closeable no-shadow">
				<p><span style="text-transform: capitalize">{{ flashtype }}!</span> {{ flash }}</p>
				<a class="close"></a>
			</div>
		{{/if}}

			<div class="notification other3 closeable">
				<p></p>
				<a class="close"></a>
			</div>

		<div class="row">
			<div class="toggle-wrap no_borders">

				<div class="col-lg-12 trigger"><div class="col-lg-12 page_box_header toggle active"><i class="im im-icon-Cursor-Click2"></i> <b>Add</b> Topup<i class="sl sl-icon-plus"></i></div></div>
				<div class="col-lg-12 toggle-container" style="display: none">
					<div class="col-lg-4">
						<div id="add-listing">
						<form action="/dashboard/senderids/add" method="POST">

							<!-- Section -->
							<div class="add-listing-section">

								<!-- Row -->
								<div class="row with-forms">
									<br>
									<!-- Status -->
									<div class="col-md-12">
										<h5>Rates (per unit)</h5>

										<ul class="rates_list">
											{{#each args.rates}}
											<li><span class="amount">N{{formatNumber amount }}</span><span class="band"> : </span><span class="_lower">{{formatNumber lowerlimit }}</span> - <span class="_upper">{{formatNumber upperlimit }}</span> units</li>
											{{/each}}
										{{#each args.rates}}
											<div class="_rates">
												<input type="hidden" class="_rates_amt" value="{{ amount }}" >
												<input type="hidden" class="_rates_lwr" value="{{ lowerlimit }}" >
												<input type="hidden" class="_rates_upr" value="{{ upperlimit }}" >
											</div>
										{{/each}}
										</ul>
									</div>


								</div>
								<!-- Row / End -->

							</div>
							<!-- Section / End -->



						</form>
						</div>
					</div>
					<div class="col-lg-8">
						<div id="add-listing">
						<form action="/dashboard/m_a_n_u_a_l" method="POST">

							<!-- Section -->
							<div class="add-listing-section">

								<!-- Row -->
								<div class="row with-forms">
									<br>
									<!-- Status -->
									<div class="col-md-12">
										<h5>Select Client</h5>
										{{!-- <input type="text" id="search_clients" maxlength="20" required placeholder="Client Name or ID"> --}}
										<select class="search_clients" name="clientid" id="search_clients" required width="100%">
										</select>
										{{!-- <input type="hidden" name="clientid" id="clientid"> --}}
										<h5>Amount (N)</h5>
										<input type="number" name="amount" maxlength="50" id="amount_entry" required>
										<div class="topup_info">
											<div>Applicable Rate: <span id="_rate">??</span></div>
											<div>Units: <span id="_units">??</span></div>
											<div>Amount: <span id="_amount">??</span></div>
										</div>
									</div>								

								</div>
								<!-- Row / End -->
								<button type="submit" class="button preview">Pay <i class="fa fa-arrow-circle-right"></i></button><span class="loading_icon fa fa-hourglass-2"></span>

							</div>
							<!-- Section / End -->



						</form>
						</div>
					</div>
				</div>

			</div>

			<div class="col-lg-12" style="margin-top: 30px">
				<div class="col-lg-12 page_box_header">Topup History <span>[{{ args.tups.length }}]</span>
				</div>
			</div>
			<div class="col-lg-12">

				<div id="add-listing">
					<!-- Section -->
					<div class="add-listing-section">

						<!-- Row -->
						<div class="row with-forms">
							<br>
							<!-- Status -->
							<div class="col-md-12 lists">
								<ul>
									<li class="list_item _hd" style="font-weight: bolder">
										<ul class="saved_item">
											<li style="flex: 8">User Name</li>
											<li style="flex: 6">Date</li>
											<li style="flex: 5">Amount</li>
											<li style="flex: 3">Units</li>
											<li style="flex: 3">Payment Mode</li>
										</ul>
									</li>
									{{#each args.tups}}
									<li class="list_item" data-wh="senderid">
										<ul class="saved_item">
											<li style="flex: 8">{{ user.name }}</li>
											<li style="flex: 6">{{formatDate createdAt "short"}}</li>
											<li style="flex: 5">{{formatNumber amount }}</li>
											<li style="flex: 3">{{formatNumber units }}</li>
											<li style="flex: 3">Manual</li>
										</ul>
									</li>
									{{else}}
										<em>No Topups yet.</em> 
									{{/each}}
								</ul>
							</div>

						</div>
						<!-- Row / End -->

					</div>
					<!-- Section / End -->
				</div>
			</div>

			<div class="col-lg-12" style="margin-top: 30px;">

				<div id="add-listing">
				</div>
			</div>
			<!-- Copyrights -->
			<div class="col-md-12">
				<div class="copyrights">Â© 2019 Tracksend. All Rights Reserved.</div>
			</div>

		</div>

	</div>
