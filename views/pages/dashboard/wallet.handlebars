	<div class="dashboard-content">

		<!-- Titlebar -->
		<div id="titlebar">
			<div class="row">
				<div class="col-md-12">
					<!-- Breadcrumbs -->
					<nav id="breadcrumbs">
						<ul>
							<li><a href="/dashboard">Dashboard</a></li>
							<li>Wallet</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		{{#if flash}}
			<div class="notification {{ flashtype }} closeable no-shadow">
				<p><span style="text-transform: capitalize">{{ flashtype }}!</span> {{ flash }}</p>
				<a class="close"></a>
			</div>
		{{/if}}

			<div class="notification other3 closeable">
				<p></p>
				<a class="close"></a>
			</div>

		<div class="row">
			<div class="toggle-wrap no_borders">

				<div class="col-lg-12 trigger"><div class="col-lg-12 page_box_header toggle active"><i class="im im-icon-Cursor-Click2"></i> <b>Topup</b> Wallet<i class="sl sl-icon-plus"></i></div></div>
				<div class="col-lg-12 toggle-container" style="display: none">
					<div class="col-lg-12">
						<div id="add-listing">
						<form action="/dashboard/wallet/pay" method="POST">

							<!-- Section -->
							<div class="add-listing-section">

								<!-- Row -->
								<div class="row with-forms">
									<br>
									<!-- Status -->
									<div class="col-md-12">
										<h5>Amount (NGN)</h5>
										<input type="number" name="amount" maxlength="50" id="amount_entry_" required>
										{{!-- <div class="topup_info">
											<div>Applicable Rate: <span id="_rate">??</span></div>
											<div>Units: <span id="_units">??</span></div>
											<div>Amount: <span id="_amount">??</span></div>
										</div> --}}
									</div>								

								</div>
								<!-- Row / End -->
								<button type="submit" class="button preview">Pay <i class="fa fa-arrow-circle-right"></i></button><span class="loading_icon fa fa-hourglass-2"></span>

							</div>
							<!-- Section / End -->



						</form>
						</div>
					</div>
				</div>

			</div>

			<div class="col-lg-12" style="margin-top: 30px">
				<div class="col-lg-12 page_box_header">Wallet Topup History <span>[{{ args.tups.length }}] | <b>Current Balance: {{formatAmount balance }} </b> </span>
				</div>
			</div>
			<div class="col-lg-12">

				<div id="add-listing">
					<!-- Section -->
					<div class="add-listing-section">

						<!-- Row -->
						<div class="row with-forms">
							<br>
							<!-- Status -->
							<div class="col-md-12 lists">
								<ul>
									<li class="list_item _hd" style="font-weight: bolder">
										<ul class="saved_item">
											<input type="hidden" class="cid" value="'+i.id+'" />
											<li style="flex: 6">Date</li>
											<li style="flex: 8">Amount</li>
											<li style="flex: 3">Payment Mode</li>
										</ul>
									</li>
									{{#each args.tups}}
									<li class="list_item" data-wh="senderid">
										<ul class="saved_item">
											<input type="hidden" class="cid" value="'+i.id+'" />
											<li style="flex: 6">{{formatDate createdAt "short"}}</li>
											<li style="flex: 8">{{formatAmount amount }}</li>
											<li style="flex: 3">{{ payment.channel }}</li>
										</ul>
									</li>
									{{else}}
										<em>No Topups yet.</em> 
									{{/each}}
								</ul>
							</div>

						</div>
						<!-- Row / End -->

					</div>
					<!-- Section / End -->
				</div>
			</div>

			<div class="col-lg-12" style="margin-top: 30px;">

				<div id="add-listing">
				</div>
			</div>

			<!-- Copyrights -->
			<div class="col-md-12">
				<div class="copyrights">Â© 2019 Tracksend. All Rights Reserved.</div>
			</div>

		</div>

	</div>
