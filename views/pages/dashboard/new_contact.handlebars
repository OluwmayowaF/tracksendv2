	<div class="dashboard-content">

		<!-- Titlebar -->
		<div id="titlebar">
			<div class="row">
				<div class="col-md-12">
					<!-- Breadcrumbs -->
					<nav id="breadcrumbs">
						<ul>
							<li><a href="#">Home</a></li>
							<li><a href="#">Dashboard</a></li>
							<li>New Contact</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		{{#if flash}}
			<div class="notification {{ flashtype }} closeable no-shadow">
				<p><span style="text-transform: capitalize">{{ flashtype }}!</span> {{ flash }}</p>
				<a class="close"></a>
			</div>
		{{/if}}

		<div class="row">
			<div class="col-lg-12"><div class="col-lg-12 page_box_header">New Contact</div></div>
			<div class="col-lg-12">

				<div id="add-listing">
				<form action="/dashboard/contacts/add" method="POST">

					<!-- Section -->
					<div class="add-listing-section">

						<!-- Row -->
						<div class="row with-forms">
							<br>
							<!-- Status -->
							<div class="col-md-6">
								<h5>First name </h5>
								<input type="text" name="firstname" id="name">
							</div>

							<!-- Type -->
							<div class="col-md-6">
								<h5>Surname </h5>
								<input type="text" name="lastname">
							</div>

						</div>
						<!-- Row / End -->

						<!-- Row -->
						<div class="row with-forms">

							<!-- Status -->
							<div class="col-md-6">
								<h5>Phone</h5>
								<input type="text" name="phone" required>
							</div>

							<!-- Type -->
							<div class="col-md-6">
								<h5>Email</h5>
								<input type="text" name="email">
							</div>

						</div>
						<!-- Row / End -->

						<div class="row with-forms">
							<div class="col-md-6">
								<h5>Country </h5>
								<select class="chosen-select-no-single" name="country">
									{{#each args.ctry}}
									<option value="{{ id }}">{{ name }}</option>
									{{/each}}
								</select>
							</div>
							<div class="col-md-6">
								<h5>Group </h5>
								<select class="chosen-select-no-single" name="group" id="new_contact_group">
									{{!-- <option label="blank" >[No Group]</option> --}}
									<option value="1">[Uncategorized]</option>
									<option value="-1">[Create Group]</option>
									<option label="blank" disabled>--------------------------------</option>
									{{#each args.grps}}
									<option value="{{ id }}">{{ name }}</option>
									{{/each}}
								</select>
							</div>

							<div class="col-md-12" id="_new_group_info" hidden>
								<div class="col-md-12 inline_popup">

									<!-- Status -->
									<div class="col-md-6">
										<h5>Group Name</h5>
										<input type="text" name="name">
									</div>

									<!-- Type -->
									<div class="col-md-6">
										<h5>Description</h5>
										<input type="text" name="description">
									</div>
								</div>
							</div>
						</div>

					</div>
					<!-- Section / End -->


					<button type="submit" class="button preview">Save <i class="fa fa-arrow-circle-right"></i></button><span class="loading_icon fa fa-hourglass-2"></span>

				</form>
				</div>
			</div>

			<!-- Copyrights -->
			<div class="col-md-12">
				<div class="copyrights">Â© 2019 Tracksend. All Rights Reserved.</div>
			</div>

		</div>

	</div>
