	<div class="dashboard-content">

		<!-- Titlebar -->
		<div id="titlebar">
			<div class="row">
				<div class="col-md-12">
					<!-- Breadcrumbs -->
					<nav id="breadcrumbs">
						<ul>
							<li><a href="/dashboard">Dashboard</a></li>
							<li>Custom Messages</li>
						</ul>
					</nav>
				</div>
			</div>
		</div>

		{{#if flash}}
			<div class="notification {{ flashtype }} closeable no-shadow">
				<p><span style="text-transform: capitalize">{{ flashtype }}!</span> {{ flash }}</p>
				<a class="close"></a>
			</div>
		{{/if}}

			<div class="notification other3 closeable">
				<p></p>
				<a class="close"></a>
			</div>

		<div class="row">
			<div class="toggle-wrap no_borders">

				<div class="col-lg-12 trigger">
					<div class="col-lg-12 page_box_header toggle active">
						<i class="im im-icon-Cursor-Click2"></i> <b>Edit</b> WhatsApp Opt-In Message 1<i class="sl sl-icon-plus"></i>
					</div>
				</div>
				<div class="col-lg-12 toggle-container" style="display: none">

					<div id="add-listing">
					<form action="/dashboard/custommessages/update" method="POST">

						<!-- Section -->
						<div class="add-listing-section">

							<!-- Row -->
							<div class="row with-forms">
								<br>
								<!-- Status -->
								<div class="col-md-12">
									<h5>Initial Opt-In Message <span>( This is the message received after filling form on website )</span></h5>
									<input type="text" name="whatsapp_optin_msg_1" id="whatsapp_optin_msg_1" maxlength="50" required style="margin-bottom: 5px" value="{{ args.whatsapp_msg_1 }}">
									<span style="color:#ff4a21; font-size: 0.85em; line-height: 1.6; background-color: #eee; display: inline-block; padding: 10px;">To further customize, add 'first name', 
										'full name', or 'company name'. Simply include any of these three fields within square brackets "[ ]", 
										and ensure there is no space within the bracket. For instance, "Hello [fullname], [companyname] welcomes you."  </span>
								</div>

							</div>
							<!-- Row / End -->
						<button type="submit" class="button preview">Save <i class="fa fa-arrow-circle-right"></i></button><span class="loading_icon fa fa-hourglass-2"></span>

						</div>
						<!-- Section / End -->

					</form>
					</div>
				</div>

				<div class="col-lg-12 trigger" style="margin-top: 10px;">
					<div class="col-lg-12 page_box_header toggle active">
						<i class="im im-icon-Cursor-Click2"></i> <b>Edit</b> WhatsApp Opt-In Message 2<i class="sl sl-icon-plus"></i>
					</div>
				</div>
				<div class="col-lg-12 toggle-container" style="display: none">

					<div id="add-listing">
					<form action="/dashboard/custommessages/update" method="POST">

						<!-- Section -->
						<div class="add-listing-section">

							<!-- Row -->
							<div class="row with-forms">
								<br>
								<!-- Status -->
								<div class="col-md-12">
									<h5>Opt-In Confirmtion Message <span>( This is the message received after user completes opt-in )</span></h5>
									<input type="text" name="whatsapp_optin_msg_2" id="whatsapp_optin_msg_2" maxlength="50" required style="margin-bottom: 5px" value="{{ args.whatsapp_msg_2 }}">
									<span style="color:#ff4a21; font-size: 0.85em; line-height: 1.6; background-color: #eee; display: inline-block; padding: 10px;">To further customize, add 'first name', 
										'full name', or 'company name'. Simply include any of these three fields within square brackets "[ ]", 
										and ensure there is no space within the bracket. For instance, "Hello [fullname], [companyname] welcomes you."  </span>
								</div>

							</div>
							<!-- Row / End -->
						<button type="submit" class="button preview">Save <i class="fa fa-arrow-circle-right"></i></button><span class="loading_icon fa fa-hourglass-2"></span>

						</div>
						<!-- Section / End -->

					</form>
					</div>
				</div>

			</div>

			<div class="col-lg-12" style="margin-top: 30px;">
				<div id="add-listing">
				</div>
			</div>

			<!-- Copyrights -->
			<div class="col-md-12">
				<div class="copyrights">Â© 2019 Tracksend. All Rights Reserved.</div>
			</div>

		</div>

	</div>
